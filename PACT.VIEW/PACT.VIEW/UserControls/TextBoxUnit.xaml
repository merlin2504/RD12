<UserControl x:Class="PACT.VIEW.TextBoxUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
      <StackPanel Orientation="Vertical" Margin="2,0,6,0">
        <Label Content="{Binding Heading}" Foreground="{DynamicResource InputFontColor}" FontSize="16"  />
        <TextBox FontSize="16" Margin="5,0,0,0" Text="{Binding Text}"/>
    </StackPanel>
</UserControl>
